<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:id="@+id/eventcard"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <io.netopen.hotbitmapgg.library.view.RingProgressBar
                    android:id="@+id/progress"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:max="100"
                    app:ringColor="@color/colorPrimary"
                    app:ringProgressColor="@color/colorPrimaryDark"
                    app:ringWidth="3dp"
                    app:style="FILL"
                    app:textIsShow="false"
                    />

                <TextView
                    android:text="Programar"
                    android:textStyle="bold"
                    android:padding="4dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textAlignment="center"
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:padding="10dp"
                android:id="@+id/tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="descricao"
                android:textColor="@color/blue_200"
                />

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/addnewtasks"
                android:padding="10dp"
                android:textAlignment="center"
                android:drawableStart="@drawable/ic_add_black_24dp"
                android:text="Adicionar novas tarefa"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>





        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/addnewevent"
            android:textStyle="bold"
            android:padding="50dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:drawableTop="@drawable/ic_add_box_black_24dp"
            android:textColor="?android:textColorPrimary"
            android:textAlignment="center"
            android:text="Adicionar novo evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </androidx.cardview.widget.CardView>
</layout>
