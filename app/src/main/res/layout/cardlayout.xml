<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/cardShimmer"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:shimmer_base_color="?android:textColorHint"
        app:shimmer_clip_to_children="true"
        app:shimmer_colored="true"
        app:shimmer_highlight_color="@color/colorAccent">

        <androidx.cardview.widget.CardView
            android:id="@+id/eventcard"
            android:layout_width="203dp"
            android:layout_height="221dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <io.netopen.hotbitmapgg.library.view.RingProgressBar
                        android:id="@+id/progress"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:max="100"
                        app:ringColor="@color/colorPrimary"
                        app:ringProgressColor="@color/colorPrimaryDark"
                        app:ringWidth="3dp"
                        app:style="FILL"
                        app:textIsShow="false" />

                    <TextView
                        android:id="@+id/titulo"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Programar"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="descricao"
                    android:textColor="@color/blue_200" />

                <TextView
                    android:id="@+id/addnewtasks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_add_black_24dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    android:text="Adicionar novas tarefa"
                    android:textAlignment="center" />


            </LinearLayout>

            <TextView
                android:id="@+id/addnewevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_checklist"
                android:padding="50dp"
                android:text="Adicionar novo evento"
                android:textAlignment="center"
                android:textColor="?android:textColorPrimary"
                android:textSize="18dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>
    </com.facebook.shimmer.ShimmerFrameLayout>

</layout>
