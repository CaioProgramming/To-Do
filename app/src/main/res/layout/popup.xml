<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.AlertDialogLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventdlg"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top|center_vertical"
            android:text="event"
            android:textColor="@color/black"
            android:textSize="26dp" />
        <TextView
            android:id="@+id/descricaodlg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descricao"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textAlignment="center"
            />
        <LinearLayout
            android:background="@drawable/line"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_gravity="center|bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/dlgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/favorite"
            android:background="@color/transparent"
            android:layout_gravity="center"

            />
            <Button
                android:id="@+id/dlgcncl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/succesbtn"
                android:background="@color/transparent"
                android:layout_gravity="center"

                />

            <Button
                android:id="@+id/dlgexcluir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/delete"
                android:background="@color/transparent"
                android:layout_gravity="center"

                />

        </LinearLayout>
    </LinearLayout>







</android.support.v7.widget.AlertDialogLayout>