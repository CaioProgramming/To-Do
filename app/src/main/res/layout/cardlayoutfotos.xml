<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        app:shimmer_colored="true"
        app:shimmer_base_color="?android:textColorHint"
        app:shimmer_highlight_color="@color/colorPrimaryDark"
        android:id="@+id/mainshimmer"
        android:layout_margin="2dp"
        android:padding="2dp"
        app:shimmer_clip_to_children="true"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_gravity="center"
            android:checkable="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardForegroundColor="@color/favorite_stroke"
            app:checkedIcon="@drawable/favorite"
            app:checkedIconTint="@color/red_300"
            app:strokeColor="@color/favorite_stroke"
            android:id="@+id/albcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView

                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/albpic"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </com.facebook.shimmer.ShimmerFrameLayout>

</layout>
