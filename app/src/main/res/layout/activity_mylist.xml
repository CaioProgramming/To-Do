<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Mylist">

    <RelativeLayout
        android:id="@+id/topnavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation"
            android:background="@color/transparent"
            android:gravity="center">

            <Button
                android:id="@+id/photobtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="65dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/ic_camera_alt_black_24dp"
                android:drawableTint="@color/white"
                android:onClick="foto"
                android:padding="3dp" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userpic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:src="@drawable/nothinghere"
                app:civ_border_color="@color/transparent"
                app:civ_border_width="1dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/usertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile"
            android:layout_centerInParent="true"
            android:text="usuÃ¡rio"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="@color/transparent"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:menu="@menu/navigation" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:name="com.myself.todo.BlankFragment"
        android:layout_below="@id/topnavigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>