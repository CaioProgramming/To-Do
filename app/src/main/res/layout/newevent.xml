<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/neweventframe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/gradnewevent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="center|top"
        android:layout_width="wrap_content"
        android:tint="@color/white"

        android:layout_height="wrap_content"
        android:src="@drawable/ic_light_bulb"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="255dp">
    <LinearLayout
        android:id="@+id/neweventform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/neweventtext"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="TÃ­tulo do seu evento"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            />

        <EditText
            android:textStyle="italic"
            android:id="@+id/neweventdescription"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="Descreva o evento"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:fontFamily="serif"
            />

        <Button
            android:id="@+id/newbtn"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="adcionar"
            android:background="@drawable/button1"
            android:textColor="@color/blue_200"
            android:textColorHighlight="@color/blue_500"

            />
    </LinearLayout>

    </LinearLayout>

</FrameLayout>