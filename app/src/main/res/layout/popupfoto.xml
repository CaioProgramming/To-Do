<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.AlertDialogLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/albpic"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_gravity="center|top|center_vertical"
            android:src="@drawable/nothinghere"
            android:text="event"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/descricaopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="descricao"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/diapic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="descricao"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="5dp"
            android:background="@drawable/line"
            android:gravity="center"
            android:padding="5dp">

            <Button
                android:id="@+id/dlgfavpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:drawableTop="@drawable/favoritecheck"

                />

            <Button
                android:id="@+id/dlgexcluir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:drawableTop="@drawable/delete"

                />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.AlertDialogLayout>