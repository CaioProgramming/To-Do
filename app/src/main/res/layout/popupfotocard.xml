<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="album"
            type="com.myself.todo.model.beans.Album" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:layout_gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/picFrame"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="450dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:layout_above="@id/diapic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/albpic"
                    android:scaleType="centerCrop" />
                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/damion_regular"
                    android:padding="10dp"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/diapic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1/8/18"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_below="@id/picFrame"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/descricaopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="@{album.description}"
                android:textAlignment="center"
                android:textSize="22sp" />

            <ImageButton
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:src="@drawable/save"
                android:visibility="gone" />
        </LinearLayout>


    </RelativeLayout>
</layout>
