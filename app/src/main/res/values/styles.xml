<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/grey_200</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/red_300</item>
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/switch_color</item>
        <item name="android:thumb">@drawable/swich_thumb</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>
    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="Dialog_No_Border">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryDark">@color/purple_800</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <style name="Bottom_Dialog_No_Border">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryDark">@color/purple_800</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/popin</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

</resources>
